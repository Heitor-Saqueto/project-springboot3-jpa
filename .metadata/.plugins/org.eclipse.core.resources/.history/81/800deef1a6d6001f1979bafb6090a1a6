package com.heitorsaqueto.course.services;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.heitorsaqueto.course.entities.User;
import com.heitorsaqueto.course.repositories.UserRepositiry;

@Service
public class UserService {
	
	@Autowired
	private UserRepositiry repository; 
	
	public List<User> findAll(){
		return repository.findAll();
	}
	public User findById() {
		Optional<User> obj = repository.findById();
		return obj.get();
	}
	
}
